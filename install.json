{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["type"],
        "reload": true
      },
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "type": {
        "order": 0,
        "title": "Where should the Pinterest button appear?",
        "type": "string",
        "default": "hover",
        "format": "radios",
        "enum": [
          "hover",
          "once"
        ],
        "enumNames": {
          "hover": "When the user hovers over any image.",
          "once": "As a single button on the page."
        }
      },

      "location": {
        "order": 1,
        "showIf": {
          "type": "once"
        },
        "title": "Location",
        "description": "Where should the button appear?",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },

      "shape": {
        "order": 2,
        "showIf": {
          "type": "once"
        },
        "title": "Button Shape",
        "default": "small",
        "format": "radios",
        "enum": [
          "small",
          "tall",
          "round"
        ],
        "type": "string",
        "enumNames": {
          "small": "Small",
          "tall": "Large",
          "round": "Round"
        }
      },

      "countPosition": {
        "showIf": {
          "type": "once",
          "shape": {
            "op": "!=",
            "value": "round"
          }
        },
        "order": 3,
        "title": "Share Count Position",
        "type": "string",
        "format": "radios",
        "default": "none",
        "enum": [
          "none",
          "above",
          "beside"
        ],
        "enumNames": {
          "none": "None",
          "above": "Above",
          "beside": "Beside"
        }
      }
    }
  }
}
